{
    "name": "leandreaci/lumen",
    "description": "Lumen Framework to auth microservice.",
    "keywords": ["framework", "laravel", "lumen"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.2",
        "laravel/lumen-framework": "^6.0",
        "guzzlehttp/guzzle": "~6.0",
        "aws/aws-sdk-php-laravel": "~3.0",
        "maxbanton/cwh": "^1.0",
        "leandreaci/filterable": "*@dev",
        "leandreaci/auth-stateless-microservice": "dev-master"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.4",
        "phpunit/phpunit": "^8.0",
        "mockery/mockery": "^1.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
